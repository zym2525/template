{
    "compilerOptions": {
        "jsx": "react",
        "experimentalDecorators": true,
        "target": "ES6",
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@config/*": [
                "config/*"
            ]
        },
        "emitDecoratorMetadata": true
    },
    "exclude": [
        "node_modules"
    ]
}